{
    "name": "farzai/promptpay",
    "description": "PromptPay QR Code Generator",
    "keywords": [
        "farzai",
        "promptpay",
        "qr",
        "qr-code",
        "promptpay-qr"
    ],
    "homepage": "https://github.com/farzai/promptpay-qr-php",
    "license": "MIT",
    "authors": [
        {
            "name": "parsilver",
            "email": "parkorn@farzai.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "endroid/qr-code": "^4.8",
        "farzai/transport": "^1.2",
        "symfony/console": "^6.2.10"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "laravel/pint": "^1.2",
        "spatie/ray": "^1.28",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "bin": [
        "bin/promptpay"
    ],
    "autoload": {
        "psr-4": {
            "Farzai\\PromptPay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Farzai\\PromptPay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
